<?xml version="1.0" encoding="ISO-8859-1"?>

<process-definition xmlns="urn:jbpm.org:jpdl-3.2" name="(EF) Perícia, Laudo Técnico ou Outros">
    <description><![CDATA[Código do fluxo: EF_PER_LAU_TEC.

Descrição: Fluxo para aguardar perícia, laudo técnico ou outros.

Raia        Localização   Papel
Secretaria  Secretaria    Chefe de Secretaria
Secretaria  Gabinete      Magistrado]]></description>  
    <!-- SWIMLANES -->
    <swimlane name="Secretaria">
        <assignment pooled-actors="#{localizacaoAssignment.getPooledActors('5:1338,5:5483,6:1469,8:5852,8:5853,6:5901,7:5197')}"/>
    </swimlane>
    <swimlane name="Nó de Desvio - (EF) Perícia, Laudo Técnico ou Outros">
        <assignment actor-id="#{actor.id}"/>
    </swimlane>  
    <!-- START-STATE -->
    <start-state name="Início">
        <task name="Tarefa inicial"/>
        <transition to="(EF) Processos pendentes de Perícia, Laudo Técnico ou Outros - AGUARDAR" name="(EF) Processos pendentes de Perícia, Laudo Técnico ou Outros - AGUARDAR"/>
    </start-state>  
    <!-- NODES -->
    <task-node end-tasks="true" name="(EF) Processos pendentes de Perícia, Laudo Técnico ou Outros - AGUARDAR">
        <task name="(EF) Processos pendentes de Perícia, Laudo Técnico ou Outros - AGUARDAR" swimlane="Secretaria"/>
        <transition to="Nó de Desvio - (EF) Perícia, Laudo Técnico ou Outros" name="Nó de Desvio - (EF) Perícia, Laudo Técnico ou Outros">
            <condition expression="#{true}"/>
        </transition>
        <transition to="(EF) Devolução à secretaria" name="Finalizar e sair da tarefa"/>
        <event type="task-end">
            <action expression="#{tramitacaoProcessualService.apagaVariavelTarefa('mostrarBotaoGravarNoFluxo')}"/>
        </event>
        <event type="task-create">
            <action expression="#{tramitacaoProcessualService.gravaVariavelTarefa('mostrarBotaoGravarNoFluxo', false)}"/>
        </event>
    </task-node>
    <process-state name="(EF) Devolução à secretaria">
        <sub-process name="(EF) Fluxo de devolução à secretaria" binding="late"/>
        <transition to="Término" name="Término"/>
    </process-state>
    <end-state name="Término"/>
    <task-node end-tasks="true" name="Nó de Desvio - (EF) Perícia, Laudo Técnico ou Outros">
        <task name="Nó de Desvio - (EF) Perícia, Laudo Técnico ou Outros" swimlane="Nó de Desvio - (EF) Perícia, Laudo Técnico ou Outros"/>
        <transition to="Término" name="Término"/>
        <transition to="(EF) Processos pendentes de Perícia, Laudo Técnico ou Outros - AGUARDAR" name="(EF) Processos pendentes de Perícia, Laudo Técnico ou Outros - AGUARDAR"/>
    </task-node>  
