<?xml version="1.0" encoding="ISO-8859-1"?>

<process-definition xmlns="urn:jbpm.org:jpdl-3.2" name="(EF) Infojud, Infoseg ou TRE">
    <description><![CDATA[Código do fluxo: EF_INFOJ_INFOG_TRE.

Descrição: Fluxo para aguardar Infojud, Infoseg ou TRE.

Raia        Localização   Papel
Secretaria  Secretaria    Chefe de Secretaria
Secretaria  Gabinete      Magistrado]]></description>  
    <!-- SWIMLANES -->
    <swimlane name="Nó de Desvio - (EF) Infojud, Infoseg ou TRE">
        <assignment actor-id="#{actor.id}"/>
    </swimlane>
    <swimlane name="Secretaria">
        <assignment pooled-actors="#{localizacaoAssignment.getPooledActors('5:1338,5:5483,6:1469,8:5852,8:5853,6:5901,7:5197')}"/>
    </swimlane>  
    <!-- START-STATE -->
    <start-state name="Início">
        <task name="Tarefa inicial"/>
        <transition to="(EF) Infojud, Infoseg ou TRE - Consultar" name="(EF) Infojud, Infoseg ou TRE - Consultar"/>
    </start-state>  
    <!-- NODES -->
    <task-node end-tasks="true" name="(EF) Infojud, Infoseg ou TRE - Consultar">
        <task name="(EF) Infojud, Infoseg ou TRE - Consultar" swimlane="Secretaria">
            <controller>
                <variable name="aviso" mapped-name="textAlert:aviso" access="read,write"/>
            </controller>
        </task>
        <description><![CDATA[* Variáveis *

1. Variável: aviso
   Label: Para juntar a resposta do Infojud, Infoseg ou TRE clique no número do processo e Anexar documentos.
   Escrita: Sim
   Obrig.: Não
   Tipo: Aviso]]></description>
        <transition to="Nó de Desvio - (EF) Infojud, Infoseg ou TRE" name="Nó de Desvio - (EF) Infojud, Infoseg ou TRE">
            <condition expression="#{true}"/>
        </transition>
        <transition to="(EF) Citação via Correios" name="01 - Citar via Correios"/>
        <transition to="(EF) Mandado de citação e penhora" name="02 - Expedir mandado de citação e penhora"/>
        <transition to="(EF) Citação via Edital" name="03 - Citar via Edital"/>
        <transition to="(EF) Devolução à secretaria" name="04 - Finalizar e sair da tarefa"/>
        <event type="task-end">
            <action expression="#{tramitacaoProcessualService.apagaVariavelTarefa('mostrarBotaoGravarNoFluxo')}"/>
        </event>
        <event type="task-create">
            <action expression="#{tramitacaoProcessualService.gravaVariavelTarefa('mostrarBotaoGravarNoFluxo', false)}"/>
        </event>
    </task-node>
    <process-state name="(EF) Citação via Correios">
        <sub-process name="(EF) Expedição de citação" binding="late"/>
        <transition to="(EF) Devolução à secretaria" name="(EF) Devolução à secretaria"/>
        <event type="node-leave">
            <action expression="#{tramitacaoProcessualService.apagaVariavel('ef:meioExp:citacao')}"/>
        </event>
        <event type="node-enter">
            <action expression="#{tramitacaoProcessualService.gravaVariavel('ef:meioExp:citacao', 'C')}"/>
        </event>
    </process-state>
    <process-state name="(EF) Mandado de citação e penhora">
        <sub-process name="(EF) Expedição de mandado de citação e penhora" binding="late"/>
        <transition to="(EF) Devolução à secretaria" name="(EF) Devolução à secretaria"/>
    </process-state>
    <process-state name="(EF) Citação via Edital">
        <sub-process name="(EF) Expedição de citação" binding="late"/>
        <transition to="(EF) Devolução à secretaria" name="(EF) Devolução à secretaria"/>
        <event type="node-leave">
            <action expression="#{tramitacaoProcessualService.apagaVariavel('ef:meioExp:citacao')}"/>
        </event>
        <event type="node-enter">
            <action expression="#{tramitacaoProcessualService.gravaVariavel('ef:meioExp:citacao', 'D')}"/>
        </event>
    </process-state>
    <process-state name="(EF) Devolução à secretaria">
        <sub-process name="(EF) Fluxo de devolução à secretaria" binding="late"/>
        <transition to="Término" name="Término"/>
    </process-state>
    <end-state name="Término"/>
    <task-node end-tasks="true" name="Nó de Desvio - (EF) Infojud, Infoseg ou TRE">
        <task name="Nó de Desvio - (EF) Infojud, Infoseg ou TRE" swimlane="Nó de Desvio - (EF) Infojud, Infoseg ou TRE"/>
        <transition to="(EF) Infojud, Infoseg ou TRE - Consultar" name="(EF) Infojud, Infoseg ou TRE - Consultar"/>
        <transition to="Término" name="Término"/>
    </task-node>  
    <!-- PROCESS-EVENTS -->
    <event type="superstate-enter">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
