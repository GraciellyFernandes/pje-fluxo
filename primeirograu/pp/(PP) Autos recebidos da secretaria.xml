<?xml version="1.0" encoding="ISO-8859-1"?>

<process-definition xmlns="urn:jbpm.org:jpdl-3.2" name="(PP) Autos recebidos da secretaria">
    <description><![CDATA[Código do fluxo: PP_AUT_REC_SEC

Descrição: Fluxo destinado à análise de processos devolvidos da secretaria para o gabinete.

Raia        Localização              Papel
Assessoria  Assessoria               Assessor
            Gabinete                 Magistrado
            Secretaria               Chefe de Secretaria
Gabinete    Gabinete                 Magistrado
            Assessoria               Assessor
            Secretaria               Chefe de Secretaria]]></description>  
    <!-- SWIMLANES -->
    <swimlane name="Nó de Desvio - (PP) Autos recebidos da secretaria">
        <assignment actor-id="#{actor.id}"/>
    </swimlane>
    <swimlane name="Gabinete">
        <assignment pooled-actors="#{localizacaoAssignment.getPooledActors('6:1469,7:5197,5:1338')}"/>
    </swimlane>
    <swimlane name="Assessoria">
        <assignment pooled-actors="#{localizacaoAssignment.getPooledActors('7:5197,6:1469,5:1338')}" actor-id="#{actor.id}"/>
    </swimlane>  
    <!-- START-STATE -->
    <start-state name="Início">
        <task name="Tarefa inicial" swimlane="Assessoria"/>
        <transition to="(PP) Autos recebidos da secretaria - ANALISAR" name="(PP) Autos recebidos da secretaria - ANALISAR"/>
    </start-state>  
    <!-- NODES -->
    <task-node end-tasks="true" name="(PP) Autos recebidos da secretaria - ANALISAR">
        <task name="(PP) Autos recebidos da secretaria - ANALISAR" swimlane="Assessoria"/>
        <transition to="Nó de Desvio - (PP) Autos recebidos da secretaria" name="Nó de Desvio - (PP) Autos recebidos da secretaria">
            <condition expression="#{true}"/>
        </transition>
        <transition to="(PP) Preparação de despacho genérico" name="Preparar despacho"/>
        <transition to="(PP) Preparação de decisão genérica" name="Preparar decisão"/>
        <event type="task-create">
            <action expression="#{tramitacaoProcessualService.apagaVariavel('pp:paj:conclusao_cancelada')}"/>
            <action expression="#{tramitacaoProcessualService.gravaVariavelTarefa('mostrarBotaoGravarNoFluxo', false)}"/>
        </event>
        <event type="task-end">
            <action expression="#{tramitacaoProcessualService.apagaVariavelTarefa('mostrarBotaoGravarNoFluxo')}"/>
        </event>
    </task-node>
    <process-state name="(PP) Preparação de despacho genérico">
        <sub-process name="(PP) Preparar ato judicial de despacho genérico" binding="late"/>
        <transition to="(PP) Conclusão cancelada?" name="(PP) Conclusão cancelada?"/>
    </process-state>
    <process-state name="(PP) Preparação de decisão genérica">
        <sub-process name="(PP) Preparar ato judicial de decisão genérica" binding="late"/>
        <transition to="(PP) Conclusão cancelada?" name="(PP) Conclusão cancelada?"/>
    </process-state>
    <decision expression="#{tramitacaoProcessualService.recuperaVariavel('pp:paj:conclusao_cancelada') == true ? '(PP) Autos recebidos da secretaria - ANALISAR' : '(PP) Apagar variáveis do fluxo'}" name="(PP) Conclusão cancelada?">
        <transition to="(PP) Autos recebidos da secretaria - ANALISAR" name="(PP) Autos recebidos da secretaria - ANALISAR"/>
        <transition to="(PP) Apagar variáveis do fluxo" name="(PP) Apagar variáveis do fluxo"/>
    </decision>
    <node name="(PP) Apagar variáveis do fluxo">
        <transition to="Término" name="Término"/>
        <event type="node-enter">
            <action expression="#{tramitacaoProcessualService.apagaVariavel('pp:paj:conclusao_cancelada')}"/>
        </event>
    </node>
    <end-state name="Término"/>
    <task-node end-tasks="true" name="Nó de Desvio - (PP) Autos recebidos da secretaria">
        <task name="Nó de Desvio - (PP) Autos recebidos da secretaria" swimlane="Nó de Desvio - (PP) Autos recebidos da secretaria"/>
        <transition to="Término" name="Término"/>
        <transition to="(PP) Autos recebidos da secretaria - ANALISAR" name="(PP) Autos recebidos da secretaria - ANALISAR"/>
    </task-node>  
    <!-- PROCESS-EVENTS -->
    <event type="node-enter">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="superstate-leave">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="subprocess-end">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="node-leave">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="before-signal">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="superstate-enter">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="process-start">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="transition">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="process-end">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="task-end">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
